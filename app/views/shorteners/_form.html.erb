<%= form_with(url: :create) do |form| %>
  <% if flash[:notice] %>
    <div id="field">
      <p><%= flash[:notice].html_safe %></p>
  <% end %>

  <div class="field">
    <%= form.text_field :url %>
  </div>

  <div class="actions">
    <%= form.submit 'Generate' %>
  </div>
<% end %>

<div id='short_url'></div>
